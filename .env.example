# üóÑÔ∏è MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB=speechai_db
MONGO_COLL_JOBS=jobs
MONGO_COLL_RESULTS=call_results
MONGO_COLL_LOGS=call_logs
MONGO_COLL_ACCOUNTS=accounts
MONGO_COLL_BATCHES=batches
MONGO_MAX_POOL_SIZE=50

# ü§ñ Retell AI Configuration
RETELL_API_KEY=your_retell_api_key_here
RETELL_BASE_URL=https://api.retellai.com
RETELL_AGENT_ID=your_agent_id_here
RETELL_FROM_NUMBER=+1234567890
RETELL_TIMEOUT_SECONDS=30

# üë∑ Worker Configuration
WORKER_COUNT=6                    # Number of parallel workers
LEASE_SECONDS=120                 # Job reservation time (seconds)
MAX_ATTEMPTS=3                    # Maximum attempts per job
RETRY_DELAY_MINUTES=30            # Delay between retries (minutes)

# üìû Call Configuration
CALL_POLLING_INTERVAL=10          # Status polling interval (seconds)
POLL_TIMEOUT_SECONDS=300          # Call timeout (5 minutes)
CALL_MAX_DURATION_MINUTES=10      # Maximum call duration
NO_ANSWER_RETRY_MINUTES=60        # Delay for "no answer" status

# üìä Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s | %(levelname)s | %(threadName)s | %(name)s | %(message)s"

# üåê API Configuration (Optional)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# üìà Google Sheets Integration (Optional)
GOOGLE_SHEETS_CREDENTIALS_FILE=path/to/credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# üîí Security (Production)
SECRET_KEY=your_secret_key_here
